<div class="index">
    <div class="container">
        <div class="row">
            <div class="col-3">
                <div class="category">
                    <img src="<%= asset_path( 'video-index.png' ) %>" /><br>
                    <img src="<%= asset_path( 'login-bar1.png' ) %>" /><br>
                    <img src="<%= asset_path( 'category.png' ) %>" /><br>
                    <img src="<%= asset_path( 'login-bar3.png' ) %>" /><br>
                </div>
            </div>
            
            <div class="col-8">
                <div>
                    <img src="<%= asset_path( 'video-category.png' ) %>" />
                </div>
                <div>
                    <% @videos.each do |video| %>
                        <div class="product-list">
                            <a href="video/show/<%= video.id %>">
                                <div class="row">
                                    <div class="col-4">
                                        <div class="index-image">
                                            <img src="<%= video.locallage.medium.url %>" width=300 weight=300 >
                                        </div>
                                    </div>
                                    <div class="col-8">
                                        <div class="product-content">
                                            <p>
                                                <span class="index-university"><%= video.university %>대학교</span>
                                                <span class="index-grade"><%= video.grade %>학년</span>
                                            </p>
                                            <p class="index-title">
                                                <%= video.title %>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>