<%= form_for(@video, :html => { :multipart => true }, url: video_create_path) do |f| %>
    <%= f.label :locallage %>
    <%= f.file_field :locallage %>
      
    <%= f.label :content %>
    <%= f.text_area :content %>
      
    <%= f.label :price %>
    <%= f.text_field :price %>
    
    <%= f.hidden_field :user_id, value: current_user.id %>

   <%= f.fields_for :video_attachments do |p| %>
     <div class="field">
       <%= p.label :portfolio %><br>
       <%= p.file_field :portfolio, :multiple => true, name: "video_attachments[portfolio][]" %>
     </div>
   <% end %>

   <div class="actions">
     <%= f.submit %>
   </div>
<% end %>